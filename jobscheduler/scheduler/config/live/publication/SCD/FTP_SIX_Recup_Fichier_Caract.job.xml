<?xml version="1.0" encoding="ISO-8859-1"?>

<job title="Recup Six fichier Caract" order="no">
    <description>
        <![CDATA[
Recup Six fichier Caract
        ]]>
    </description>

	<!-- les variables d environnement permettent de rendre plus clair la config , on peut utiliser des variables d env système -->
	<environment>
		<variable name="LOG"
				  value="&quot;\\vill1\Partage\,FGA Systèmes\PRODUCTION\FTP\LOG\!Y!M!D-!S-log.txt&quot;"/>		  
		<variable name="SCRIPT_PATH"
				  value="&quot;C:\FGA_SOFT_INTEGRATION\BATCH\FTP&quot;"/>		  	
		<variable name="SCRIPT"
				  value="&quot;script_FINALIM_Reception.txt&quot;"/>		  
		<variable name="OUTPUT_PATH"
				  value="&quot;\\vill1\Partage\SCD_FILES_recette\IN\DATA\SIX\CARACT&quot;"/>
		<variable name="FILENAME"
				  value="finalimo"/>

    </environment>

	<!-- Utilisation des parametres de FGA_Automate pour configurer le job: Si il n y a pas date, la date utilisée est celle du jour
	-->
	<script language="shell">
	<![CDATA[	
	  
	  %SCRIPT_PATH%\Winscp.exe /console /log=%LOG% /script=%SCRIPT_PATH%\%SCRIPT% /parameter *%FILENAME%* %OUTPUT_PATH%
	  "\\vill1\Partage\,FGA Systèmes\SCD\IMPLEMENTATION\1 - IT\BATCH\COPY SIX_CARACT.BAT"
	  
	  IF errorlevel 1 GOTO error

		echo Success

		goto end

		:error
		echo Erreur sur la recup

		goto end
		
		
		:end
    ]]>
	</script>
    <!-- start_when_directory_changed directory=&quot;\\vill1\Partage\TQA\TOTO&quot;  regex=&quot;[.]*\.txt&quot;/ -->
    <run_time let_run="yes">
        <weekdays>
			<day day="3">
                <period when_holiday="ignore_holiday"
                        single_start="20:23"/>
            </day>
			<day day="4">
                <period when_holiday="ignore_holiday"
                        single_start="20:23"/>
            </day>
			<day day="5">
                <period when_holiday="ignore_holiday"
                        single_start="20:23"/>
            </day>
			<day day="1">
                <period when_holiday="ignore_holiday"
                        single_start="20:23"/>
            </day>
			<day day="2">
                <period when_holiday="ignore_holiday"
                        single_start="20:23"/>
            </day>
		</weekdays>
    </run_time>
</job>
