<job title = "Liste des VLs pour des fonds détenus">
<description>
 donne la liste des VLs historique pour certains fonds détenus ou non ,sur une profondeur de 10 jours
</description>
    <process file="\\vill1\Partage\,FGA Soft\FGA_Automate\FGA_Automate_Batch\FGA_Automate_Batch.exe"
             param="-nogui -sql=$SQL -ini=$INI -csv=$OUTPUT_PATH $CSV_FILES">
